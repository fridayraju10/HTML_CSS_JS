<body>
<img src="https://incometaxindia.gov.in/Lists/Useful%20Links/Attachments/32/IncomeTax_Logo.png"
     alt="Income Tax Dept Logo"
     style="position: absolute; top: 20px; right: 30px; width: 120px;">

  <div class="container">
    <h2>Employee Tax Calculator</h2>

    <label for="name">Employee Name:</label>
    <input type="text" id="name" placeholder="Enter full name">

    <label for="dob">Date of Birth:</label>
    <input type="date" id="dob">

    <label for="gender">Gender:</label>
    <select id="gender">
      <option value="">--Select Gender--</option>
      <option value="male">Male</option>
      <option value="female">Female</option>
    </select>

    <label for="salary">Annual Salary (₹):</label>
    <input type="number" id="salary" placeholder="Enter annual salary">

    <button onclick="calculateTax()">Calculate Tax</button>

    <div id="result" class="result"></div>
  </div>

  <script>
    function calculateTax() {
      const name = document.getElementById("name").value.trim();
      const dob = document.getElementById("dob").value;
      const gender = document.getElementById("gender").value;
      const salary = parseFloat(document.getElementById("salary").value);
      const resultDiv = document.getElementById("result");

      if (!name || !dob || !gender || isNaN(salary)) {
        resultDiv.style.color = "red";
        resultDiv.textContent = "⚠️ Please fill all fields correctly!";
        return;
      }

      let tax = 0;

      if (salary < 700000) {
        tax = 0;
      } else if (salary < 1000000) {
        tax = gender === "male" ? salary * 0.10 : salary * 0.05;
      } else if (salary < 2000000) {
        tax = gender === "male" ? salary * 0.20 : salary * 0.10;
      } else {
        if (gender === "male") {
          tax = salary * 0.30;
        } else {
          tax = salary <= 3000000 ? salary * 0.20 : salary * 0.30;
        }
      }

      const taxFormatted = tax.toLocaleString('en-IN', { style: 'currency', currency: 'INR' });

      resultDiv.innerHTML = `Dear ${name},<br>Your calculated tax is <span style="color:#007bff">${taxFormatted}</span>`;
      resultDiv.style.color = "#e60000";
    }
  </script>
